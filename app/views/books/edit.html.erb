<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<div class="editing">
		      <h2>Editing book</h2>
   		        <!-- form_for部分 -->
   		        <%= form_for(@book) do |f| %>
   		          <h4>Title</h4>
   		          <%= f.text_field :title, class: "book_title" %>
   		          <h4>Body</h4>
   		          <%= f.text_area :body, class: "book_body" %><br>


   		          <%= f.submit 'Update Book', class: "btn btn-primary" %>
   		          <br>
   		          <br>
   				  <div class="back-link">
   				    <%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %>|
			   	    <%= link_to 'Back', new_book_path, class: "back" %>
                   </div>
   	            <% end %>
            </div>
        </div>
    </div>
</div>
