<div class="container">
	<div class="row">
        <div class="col-md-12">
        	<h2>User info</h2>
        </div>
      </div>

    <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
      <div class="row">
      	<div class="col-md-6">
      		<label class="user-name">Name</label><%= f.text_field :name, class: "name" %>
      	</div>
      </div>
      <div class="row">
      	<div class="col-md-12">
      		<label>Image</label>
      		<%= f.attachment_field :user_image, class: "user_image" %>
      	</div>
      </div>
      <div class="row">
      	<div class="col-md-12">
      		<label>Introduction</label><%= f.text_field :introduction, class: "introduction" %><br>
      		<%= f.submit 'Update User' %>
            </div>
      </div>
      <% end %>
</div>