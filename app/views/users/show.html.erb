<%= render 'books/user_info', book: @book, user: @user %>

      <div class="col-xs-8">
      	<h2>Books</h2>
        	<table>
        		<tr>
        			<td class="user-img"></td>
        			<td class="user-name"></td>
        			<td class="book-title">Title</td>
        			<td class="book-body">Opinion</td>
        		</tr>
        		<% @user_books.each do |book| %>
        		  <tr>
          			<td class="user-img">
          				<%= attachment_image_tag @user, :user_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg", class: "user-img" %>
          			</td>
          			<td class="user-name">
                  <!-- 名前の表示なし -->
          			</td>
          			<td class="book-title">
          				<%= link_to book.title, book_path(book), class: "book_title" %>
          			</td>
          			<td class="book-body">
          				<%= book.body %>
          			</td>
          		  </tr>
        		<% end %>
        	</table>
      </div>
  </div>
</div>