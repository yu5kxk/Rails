<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Font Awesome -->
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
            <div class="header-menu">
              <h2 class="bookers">Bookers</h2>
            </div>
          </div>
              <nav>
                <ul class="header-nav">
                  <% if user_signed_in? %>
                    <li class="header-nav-item">
                      <i class="fas fa-home"></i>
                      <%= link_to 'Home',user_path(current_user.id), class: "home" %>
                    </li>
                    <li class="header-nav-item">
                      <i class="fas fa-user"></i>
                      <%= link_to 'Users',users_path, class: "users" %>
                    </li>
                    <li class="header-nav-item">
                      <i class="fas fa-book"></i>
                      <%= link_to 'Books',new_book_path, class: "books" %>
                    </li>
                    <li class="header-nav-item">
                      <i class="fas fa-sign-out-alt"></i>
                      <%= link_to 'logout',destroy_user_session_path, method: :delete, class: "logout" %>
                    </li>
                  <% else %>
                    <li class="header-nav-item">
                      <i class="fas fa-home"></i>
                      <%= link_to 'Home', books_path, class: "home" %>
                    </li>
                    <li class="header-nav-item">
                      <i class="fas fa-link"></i>
                      <%= link_to 'About', new_user_path, class: "about" %>
                    </li>
                    <li class="header-nav-item">
                      <i class="fas fa-user-plus"></i>
                        <%= link_to 'Sign up', new_user_registration_path, class: "sign_up" %>
                    </li>
                    <li class="header-nav-item">
                      <i class="fas fa-sign-in-alt"></i>
                      <%= link_to 'login', new_user_session_path, class: "sign_in" %>
                    </li>
                  <% end %>
                </ul>
              </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xc-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
